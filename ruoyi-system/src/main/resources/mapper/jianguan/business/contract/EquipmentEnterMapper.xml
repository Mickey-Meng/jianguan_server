<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.jianguan.business.contract.mapper.EquipmentEnterMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ruoyi.jianguan.business.contract.domain.entity.EquipmentEnter">
        <id column="id" property="id" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_time" property="createTime" />
        <result column="update_user_id" property="updateUserId" />
        <result column="update_time" property="updateTime" />
        <result column="project_id" property="projectId" />
        <result column="project_code" property="projectCode" />
        <result column="supervision_ban" property="supervisionBan" />
        <result column="equipment_info" property="equipmentInfo" />
        <result column="attachment" property="attachment" />
        <result column="status" property="status" />
        <result column="draft_flag" property="draftFlag" />
        <result column="deleted_flag" property="deletedFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_user_id,
        create_time,
        update_user_id,
        update_time,
        id, project_id, project_code, supervision_ban, equipment_info, attachment, status, draft_flag, deleted_flag
    </sql>


    <select id="getPageInfo" parameterType="com.ruoyi.jianguan.business.contract.domain.dto.EquipmentEnterPageDTO" resultType="com.ruoyi.jianguan.business.contract.domain.vo.EquipmentEnterPageVo">
        select a.*,p1.NAME as projectName,u.nick_name as createUserName from zz_equipment_enter a
        left join ss_f_projects p on a.build_section = p.ID and p.GROUPLEVEL = 3
        left join ss_f_projects p1 on p1.id = p.parentid
        left join sys_user u on a.create_user_id = u.user_id
          where   a.build_section = #{pageDto.buildSection}
        <if test="pageDto.projectCode != null and pageDto.projectCode != ''">
            and a.project_code like concat('%',#{pageDto.projectCode},'%')
        </if>
        <if test="pageDto.supervisionBan != null and pageDto.supervisionBan != ''">
            and a.`supervision_ban` like concat('%',#{pageDto.supervisionBan},'%')
        </if>
        <if test="pageDto.draftFlag != null">
            and a.draft_flag = #{pageDto.draftFlag}
        </if>
         order by a.create_time desc
    </select>

</mapper>
