<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.jianguan.business.contract.mapper.ContractPaymentMapper">

    <resultMap type="com.ruoyi.jianguan.business.contract.domain.entity.ContractPayment" id="ContractPaymentResult">
        <result property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="typeCode" column="type_code"/>
        <result property="amount" column="amount"/>
        <result property="recordTime" column="record_time"/>
        <result property="remark" column="remark"/>
        <result property="attachment" column="attachment"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="create_user_id" column="createUserId"/>
        <result property="createTime" column="create_time"/>
        <result property="update_user_id" column="updateUserId"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getPageInfo" resultType="com.ruoyi.jianguan.business.contract.domain.vo.ContractPaymentPageVo" parameterType="com.ruoyi.jianguan.business.contract.domain.dto.ContractPaymentPageDTO">
        select id,
            type,
            type_code as typeCode,
            amount,
            record_time as recordTime,
            remark,
            attachment,
            status,
            del_flag as delFlag,
            create_user_id as createUserId,
            create_time as createTime,
            update_user_id as updateUserId,
            update_time as updateTime
        from zz_contract_payment a
        where del_flag = 0
            <if test="pageDto.recordTime != null">
                and a.record_time = #{pageDto.recordTime}
            </if>
            <if test="pageDto.status != null">
                and a.status = #{status}
            </if>
            <if test="pageDto.includeTypeCodes != null and pageDto.includeTypeCodes.size > 0">
                and a.type_code in
                <foreach collection="pageDto.includeTypeCodes" item="typeCode" open="(" close=")">
                    #{typeCode}
                </foreach>
            </if>
            <if test="pageDto.excludeTypeCodes != null and pageDto.excludeTypeCodes.size > 0">
                and a.type_code not in
                <foreach collection="pageDto.excludeTypeCodes" item="typeCode" open="(" close=")">
                    #{typeCode}
                </foreach>
            </if>
        order by create_time desc
    </select>

</mapper>