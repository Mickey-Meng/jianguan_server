<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.jianguan.business.contract.mapper.MaterialBrandReportMapper">

    <resultMap type="com.ruoyi.jianguan.business.contract.domain.entity.MaterialBrandReport"
               id="MaterialBrandReportResult">
        <result property="id" column="id"/>
        <result property="materialBrand" column="material_brand"/>
        <result property="materialCategory" column="material_category"/>
        <result property="materialCategoryCode" column="material_category_code"/>
        <result property="samplePhoto" column="sample_photo"/>
        <result property="sampleContent" column="sample_content"/>
        <result property="materialApproachPhoto" column="material_approach_photo"/>
        <result property="materialApproachContent" column="material_approach_content"/>
        <result property="materialApproachQuantity" column="material_approach_quantity"/>
        <result property="attachment" column="attachment"/>
        <result property="attachment1" column="attachment1"/>
        <result property="attachment2" column="attachment2"/>
        <result property="status" column="status"/>
        <result property="status1" column="status1"/>
        <result property="status2" column="status2"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createUserId" column="createUserId"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUserId" column="updateUserId"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>


    <select id="getPageInfo" resultType="com.ruoyi.jianguan.business.contract.domain.vo.MaterialBrandReportPageVo"
            parameterType="com.ruoyi.jianguan.business.contract.domain.dto.MaterialBrandReportPageDTO">
        select *
        from jg_material_brand a
        <where>
            <if test="pageDto.status != null">
                and a.status = #{status}
            </if>
            a.project_id = #{pageDto.projectId}
            and
            a.del_flag = 0
        </where>
        order by create_time desc
    </select>
</mapper>