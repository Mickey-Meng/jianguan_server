<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.jianguan.business.constructionDesign.mapper.ConstructionDesignMapper">

    <resultMap type="com.ruoyi.jianguan.business.constructionDesign.domain.entity.ConstructionDesign" id="ConstructionDesignResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="contents" column="contents"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="reportTime" column="report_time"/>
        <result property="reportUser" column="report_user"/>
        <result property="ownerId" column="owner_id"/>
        <result property="ownerName" column="owner_name"/>
        <result property="attachment" column="attachment"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="projectId" column="project_id"/>
        <result property="remark" column="remark"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUserId" column="update_user_id"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getPlanPageInfo" resultType="com.ruoyi.jianguan.business.constructionDesign.domain.vo.PlanConstructionDesignVo" parameterType="com.ruoyi.jianguan.business.constructionDesign.domain.dto.ConstructionDesignPageDTO">
        select
            id,
            name,
            contents,
            start_time,
            end_time,
            report_time,
            report_user,
            owner_id,
            owner_name,
            plan_status AS status,
            del_flag as delFlag,
            project_id as projectId,
            remark,
            create_user_id as createUserId,
            create_time as createTime,
            update_user_id as updateUserId,
            update_time as updateTime
            from zz_construction_design a
        where del_flag = 0
        <if test="pageDto.name != null">
            and a.name like concat('%',#{pageDto.name},'%')
        </if>
        <if test="pageDto.status != null">
            and a.plan_status = #{pageDto.status}
        </if>
        order by create_time desc
    </select>

    <select id="getProgressPageInfo" resultType="com.ruoyi.jianguan.business.constructionDesign.domain.vo.ProgressConstructionDesignVo" parameterType="com.ruoyi.jianguan.business.constructionDesign.domain.dto.ConstructionDesignPageDTO">
        select
            id,
            name,
            contents,
            start_time,
            end_time,
            report_time,
            report_user,
            owner_id,
            owner_name,
            progress_status AS status,
            attachment AS attachmentNames,
            del_flag as delFlag,
            project_id as projectId,
            remark,
            create_user_id as createUserId,
            create_time as createTime,
            update_user_id as updateUserId,
            update_time as updateTime
        from zz_construction_design a
        where del_flag = 0
          and plan_status = 1
        <if test="pageDto.name != null">
            and a.name like concat('%',#{pageDto.name},'%')
        </if>
        <if test="pageDto.status != null">
            and a.progress_status = #{pageDto.status}
        </if>
        order by create_time desc
    </select>

</mapper>