<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruoyi.web.controller.jianguan.other.zlsk.strestservice.userauth.mapper.PositionMapper">

    <select id="select" resultType="Map" parameterType="Map">
        SELECT t1.*,t2.USERID FROM (
           select * from zlsk_position where ststate = 1
         ) t1 LEFT join (select * from ss_f_userinfo WHERE STSTATE = 1)t2 on t1.positionCode = t2.POST
        <if test="id != null and id != ''">and t1.id = #{id}</if>
        <if test="positionName != null and positionName != ''">and t1.positionName like CONCAT('%',#{positionName},'%')</if>
        <if test="positionCode != null and positionCode != ''">and t1.positionCode = #{positionCode}</if>
        <if test="parentId != null and parentId != ''">and t1.parentId = #{parentId}</if>
        order by storder;
    </select>



    <insert id="insert" parameterType="Map">
        insert into zlsk_position
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="positionName != null">
                positionName,
            </if>
            <if test="positionCode != null">
                positionCode,
            </if>
            <if test="positionGrades != null">
                positionGrades,
            </if>
            <if test="parentId != null">
                parentId,
            </if>
            <if test="lev != null">
                lev,
            </if>
            <if test="description != null">
                description,
            </if>
            <if test="createtime != null">
                createtime,
            </if>
            <if test="storder != null">
                storder,
            </if>
            <if test="ststate != null">
                ststate,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="positionName != null">
                #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="positionCode != null">
                #{positionCode,jdbcType=VARCHAR},
            </if>
             <if test="positionGrades != null">
                #{positionGrades,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                #{parentId,jdbcType=INTEGER},
            </if>
            <if test="lev != null">
                #{lev,jdbcType=INTEGER},
            </if>
            <if test="description != null">
                #{description,jdbcType=VARCHAR},
            </if>
            <if test="createtime != null">
                #{createtime,jdbcType=VARCHAR},
            </if>
            <if test="storder != null">
                #{storder,jdbcType=INTEGER},
            </if>
            <if test="ststate != null">
                #{ststate,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="Map">
        update zlsk_position
        <set>
            <if test="positionName != null">
                positionName = #{positionName,jdbcType=VARCHAR},
            </if>
            <if test="positionCode != null">
                positionCode = #{positionCode,jdbcType=VARCHAR},
            </if>
            <if test="positionGrades != null">
                positionGrades = #{positionGrades,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                parentId = #{parentId,jdbcType=INTEGER},
            </if>
            <if test="lev != null">
                lev = #{lev,jdbcType=INTEGER},
            </if>
            <if test="description != null">
                description = #{description,jdbcType=VARCHAR},
            </if>
            <if test="createtime != null">
                createtime = #{createtime,jdbcType=VARCHAR},
            </if>

            <if test="storder != null">
                storder = #{storder,jdbcType=INTEGER},
            </if>
            <if test="ststate != null">
                ststate = #{ststate,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <update id="delete" parameterType="java.lang.Integer">
        update  zlsk_position set ststate = 0
        where id = #{id}
    </update>

    <update id="deleteChildren" parameterType="java.lang.Integer">
        update  zlsk_position set ststate = 0
        where parentId = #{id}
    </update>
</mapper>
