<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.controller.jianguan.zlsk.strestservice.mapper.CiLandscapeGreeningWorkMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ruoyi.web.controller.jianguan.zlsk.strestservice.model.CiLandscapeGreeningWork">
        <id column="id" property="id" />
        <result column="project_name" property="projectName" />
        <result column="work_amount" property="workAmount" />
        <result column="unit_price" property="unitPrice" />
        <result column="project_cost" property="projectCost" />
        <result column="engineering_id" property="engineeringId" />
    </resultMap>
    <sql id="BaseResultSql">
        id,project_name,work_amount,unit_price,project_cost,engineering_id
    </sql>

    <select id="selectByEngineeringId" resultMap="BaseResultMap">
        SELECT
            <include refid="BaseResultSql" />
        FROM
            ci_landscape_greening_work
        WHERE
            engineering_id=#{engineeringId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ci_landscape_greening_work VALUES (null,#{projectName},#{workAmount},#{unitPrice},
                                                #{projectCost},#{engineeringId})
    </insert>


    <update id="updateById" useGeneratedKeys="true" keyProperty="id">
        UPDATE
            ci_landscape_greening_work
        <set>
        <if test="projectName!=null">
            project_name = #{projectName},
        </if>
        <if test="workAmount!=null">
            work_amount = #{workAmount},
        </if>
        <if test="unitPrice!=null">
            unit_price = #{unitPrice},
        </if>
        <if test="projectCost!=null">
            project_cost = #{projectCost}
        </if>
        </set>
        WHERE
            engineering_id=#{engineeringId}
        and
            id=#{id}
    </update>

    <delete id="deleteByIds">
        DELETE FROM
            ci_landscape_greening_work
        WHERE
            id IN
        <foreach collection="ids" separator="," item="item" open="(" close=")">
            #{item}
        </foreach>
    </delete>
</mapper>
