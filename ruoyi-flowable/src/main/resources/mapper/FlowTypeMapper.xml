<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.flowable.mapper.FlowTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ruoyi.flowable.model.FlowType">
        <id column="id" property="id" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_time" property="createTime" />
        <result column="update_user_id" property="updateUserId" />
        <result column="update_time" property="updateTime" />
        <result column="flow_key" property="flowKey" />
        <result column="flow_name" property="flowName" />
        <result column="deleted_flag" property="deletedFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_user_id,
        create_time,
        update_user_id,
        update_time,
        id, flow_key, flow_name, deleted_flag
    </sql>


    <select id="getPageInfo" parameterType="com.ruoyi.flowable.domain.dto.FlowTypePageDTO" resultType="com.ruoyi.flowable.domain.vo.FlowTypeDetailVo">
        select a.* from  zz_flow_type a
        where 1 = 1
        <if test="pageDto.flowKey != null and pageDto.flowKey != ''">
            and a.flow_key  like concat('%',#{pageDto.flowKey},'%')
        </if>
        <if test="pageDto.flowName != null and pageDto.flowName != ''">
            and a.flow_name like concat('%',#{pageDto.flowName},'%')
        </if>
        order by a.create_time desc
    </select>

    <select id="getAuditInfoByTypeId" resultType="com.ruoyi.flowable.domain.entity.FlowAuditEntry">
        select f.* from  zz_flow_type a left join zz_flow_audit_entry f on a.id = f.type_id where f.project_id = #{projectId}
                                                                                              and f.type_id = #{id} and f.build_section = #{buildSection}
    </select>

</mapper>
